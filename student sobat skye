<script>
  document.getElementById('form').addEventListener('submit', function(e){
    e.preventDefault();
    const nama = document.getElementById('nama').value;
    const tanggal = document.getElementById('tanggal').value;
    const discord = document.getElementById('discord').value;

    // Redirect ke WhatsApp CS dengan data otomatis
    const wa = "6281385637969";
    const message = `Halo CS, saya sudah transfer.\n\nNama Lengkap: ${nama}\nTanggal: ${tanggal}\nUsername Discord: ${discord}`;
    window.open(`https://wa.me/${wa}?text=${encodeURIComponent(message)}`);
  });
</script>

